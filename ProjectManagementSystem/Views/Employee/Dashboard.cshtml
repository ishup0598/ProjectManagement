@model IEnumerable<Model.Employee>

<body>
    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end height-15">
                <ul class=" navbar-nav flex-grow-4 mr-auto">
                    @*<li class="nav-item">
                        @if (ViewBag.role == "Admin")
                        {
                            <form method="post">
                                <a class="nav-link text-dark float-end m-4" asp-area="" asp-controller="Product" asp-action="Create"> Add Product </a>                              
                            </form>
                        }
                    </li>*@
                    <li class="nav-item">
                        <a class="nav-link text-dark float-end m-4"  asp-controller="Employee" asp-action="Logout" value="Logout"> Logout </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container ">
    <h5 class="text-uppercase p-2 text-center">Employee List</h5>
    <table class="table table-bordered table-striped align-content-center">
        <thead>
            <tr align="center"> 
                <th>Employee Code</th>
                <th>Employee Name</th>
                <th>Employee Type</th>
                <th>Joining Date</th>               

            </tr>
        </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr align="center">
                        <td>@obj.EmployeeCode</td>
                        <td>@obj.EmployeeName</td>
                        <td>@obj.EmployeeType</td>
                        <td>@obj.JoiningDate.ToShortDateString()</td>                      
                    </tr>
                }
            </tbody>
    </table>
    </div>
</body>

