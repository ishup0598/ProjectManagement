@model Model.ProjectVM


<section class="vh-000" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-7">
                <h5 class="text-uppercase p-2 text-center">Add New Project</h5>
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-lg-0">
                        @*<div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                        alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>*@
                        <div class="col-md-6 col-lg-9 d-flex ">
                            <div class="card-body p-4 p-lg-5 text-black justify-content-center">

                                <form method="post" class="align-content-center">
                                    <input asp-for="ProjectDetails.ProjectId" hidden />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="ProjectDetails.ProjectName" class="control-label"></label>
                                        <input asp-for="ProjectDetails.ProjectName" class="form-control" />
                                        <span asp-validation-for="ProjectDetails.ProjectName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProjectDetails.DeadlineDate" class="control-label"></label>
                                        <input asp-for="ProjectDetails.DeadlineDate" type="date" value="null" class="form-control" />
                                        <span asp-validation-for="ProjectDetails.DeadlineDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProjectDetails.NoOfEmployees" class="control-label"></label>
                                        <input asp-for="ProjectDetails.NoOfEmployees" class="form-control" />
                                        <span asp-validation-for="ProjectDetails.NoOfEmployees" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProjectDetails.ProjectManager" class="control-label"></label>
                                        <select asp-for="ProjectDetails.ProjectManager" class="form-select" asp-items="@Model.projectManager">
                                        <option>Select ProjectManager</option>
                                        </select>
                                        <span asp-validation-for="ProjectDetails.ProjectManager" class="text-danger"></span>
                                    </div>                              
                                    <div class="form-group">
                                        <label asp-for="ProjectDetails.TeamLead" class="control-label"></label>
                                        <select asp-for="ProjectDetails.TeamLead" class="form-select" asp-items="@Model.TeamLead" >
                                        <option>Select TeamLead</option>
                                        </select>
                                        <span asp-validation-for="ProjectDetails.TeamLead" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProjectDetails.Developers" class="control-label"></label>
                                        <select asp-for="ProjectDetails.Developers" asp-items="@Model.Developers" multiple="multiple" class="form-select js-example-basic-multiple ">
                                            <option disabled> Select Developers </option>
                                            @*@foreach (var emp in ViewBag.Developers)
                                            {
                                                <option value="@emp.Id">@emp.EmployeeName</option>
                                            }*@
                                        </select>
                                        <span asp-validation-for="ProjectDetails.Developers" class="text-danger"></span>
                                    </div>


                                    <div class="form-group p-3" style="align-content:center">
                                        @if (Model.ProjectDetails.ProjectId == 0)
                                        {
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        }
                                        else
                                        {
                                            <input type="submit" value="Update" class="btn btn-primary" />
                                        }
                                        <a asp-controller="Project" asp-action="Index" class="btn btn-secondary"> Back</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
    });
</script>


